<!DOCTYPE html>
<html lang="en">
  <% include header %>
  <body>
    <% include navbar %>

    <div role="main" class="container" style="width: 50%;">
      <br /><br />

      <h2>-- Employee Record --</h2>
      <br />
      <div>
        <div class="form-group">
          <label for="txtName">Name:</label>
          <input
            type="text"
            class="form-control"
            id="txtName"
            readonly
            value="<%= employee[0].name %>"
            name="txtName"
          />
          <label for="txtTitle">Title:</label>
          <input
            type="text"
            class="form-control"
            id="txtTitle"
            readonly
            value="<%= employee[0].title %>"
            name="txtTitle"
          />
          <label for="txtEMail">E-Mail:</label>
          <input
            type="text"
            class="form-control"
            id="txtEMail"
            readonly
            value="<%= employee[0].email %>"
            name="txtEMail"
          />
          <label for="txtNotes">Notes:</label>
          <input
            type="text"
            class="form-control"
            id="txtNotes"
            readonly
            value="<%= employee[0].notes %>"
            name="txtNotes"
          />
        </div>
      </div>
      <br /><br />
      <a href="/">Return to Employee List</a>
    </div>
  </body>
  <% include scripts %>
</html>
